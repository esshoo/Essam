{
  "rules": {
    ".read": false,
    ".write": false,

    "admins": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": false
      }
    },

    "requests": {
      "$rid": {
        // تم التعديل: $rid هنا هو نفسه UID المستخدم لضمان الثبات
        ".read": "auth != null && (auth.uid === $rid || root.child('admins').child(auth.uid).val() === true)",
        ".write": "auth != null && (auth.uid === $rid || root.child('admins').child(auth.uid).val() === true)",
        ".validate": "newData.hasChildren(['createdByUid','createdByType','status','createdAt'])",
        
        "lastOfflineAt": {
          ".validate": "newData.isNumber()"
        },
        "lastOfflineFrom": {
          ".validate": "newData.isString() && newData.val().length <= 120"
        },
        "lastOfflineText": {
          ".validate": "newData.isString() && newData.val().length <= 200"
        }
      },
      ".read": "auth != null && root.child('admins').child(auth.uid).val() === true",
      ".indexOn": ["status", "createdAt", "lastOfflineAt"]
    },

    "rooms": {
      "$roomId": {
        ".read": "auth != null && (data.child('participants').child(auth.uid).val() === true || root.child('admins').child(auth.uid).val() === true)",
        ".write": "auth != null && root.child('admins').child(auth.uid).val() === true"
      }
    },

    "offlineMessages": {
      "$rid": {
        // السماح للمستخدم بقراءة رسائله الخاصة أو للمدير بقراءة كل الرسائل
        ".read": "auth != null && (auth.uid === $rid || root.child('admins').child(auth.uid).val() === true)",
        "$mid": {
          ".write": "auth != null && (auth.uid === $rid || root.child('admins').child(auth.uid).val() === true)"
        }
      }
    },

    "notifications": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && root.child('admins').child(auth.uid).val() === true"
      }
    },

    "fcmTokens": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        "$token": {
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    }
  }
}