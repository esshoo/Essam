{
  "rules": {
    ".read": false,
    ".write": false,
    "debug": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "requests": {
      ".read": "auth != null && auth.token.email == 'esshoo@gmail.com'",
      ".indexOn": [
        "status",
        "createdAt",
        "lastOfflineAt"
      ],
      "$rid": {
        ".read": "auth != null && (auth.token.email == 'esshoo@gmail.com' || data.child('createdByUid').val() === auth.uid)",
        ".write": "auth != null && ((!data.exists() && newData.child('createdByUid').val() === auth.uid) || auth.token.email == 'esshoo@gmail.com')",
        "lastOfflineAt": {
          ".write": "auth != null && (auth.token.email == 'esshoo@gmail.com' || data.parent().child('createdByUid').val() === auth.uid)",
          ".validate": "newData.isNumber()"
        },
        "lastOfflineFrom": {
          ".write": "auth != null && (auth.token.email == 'esshoo@gmail.com' || data.parent().child('createdByUid').val() === auth.uid)",
          ".validate": "newData.isString() && newData.val().length <= 120"
        },
        "lastOfflineText": {
          ".write": "auth != null && (auth.token.email == 'esshoo@gmail.com' || data.parent().child('createdByUid').val() === auth.uid)",
          ".validate": "newData.isString() && newData.val().length <= 200"
        },
        "adminReplyAt": {
          ".write": "auth != null && auth.token.email == 'esshoo@gmail.com'",
          ".validate": "newData.isNumber()"
        },
        "adminReplyText": {
          ".write": "auth != null && auth.token.email == 'esshoo@gmail.com'",
          ".validate": "newData.isString() && newData.val().length <= 1000"
        },
        "adminReplyBy": {
          ".write": "auth != null && auth.token.email == 'esshoo@gmail.com'",
          ".validate": "newData.isString()"
        }
      }
    },
    "offlineMessages": {
      ".read": "auth != null && auth.token.email == 'esshoo@gmail.com'",
      "$rid": {
        ".read": "auth != null && (auth.token.email == 'esshoo@gmail.com' || root.child('requests').child($rid).child('createdByUid').val() === auth.uid)",
        ".write": "auth != null && auth.token.email == 'esshoo@gmail.com'",
        "$mid": {
          ".write": "auth != null && (auth.token.email == 'esshoo@gmail.com' || root.child('requests').child($rid).child('createdByUid').val() === auth.uid)"
        }
      }
    },
    "rooms": {
      "$roomId": {
        ".read": "auth != null && (auth.token.email == 'esshoo@gmail.com' || data.child('participants').child(auth.uid).val() === true)",
        ".write": "auth != null && auth.token.email == 'esshoo@gmail.com'"
      }
    },
    "messages": {
      ".read": "auth != null && auth.token.email == 'esshoo@gmail.com'",
      ".write": "auth != null"
    },
    "fcmTokens": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        "$token": {
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    }
  }
}